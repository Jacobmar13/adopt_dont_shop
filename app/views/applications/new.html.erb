<h1>New Application</h1>
<%= form_with url: "/applications", method: :post, local: true do |f| %>
  <%= f.label :name, 'Name' %>
  <%= f.text_field :name %>

  <%= f.label :street_address, 'Street address' %>
  <%= f.text_field :street_address %>

  <%= f.label :city, 'City' %>
  <%= f.text_field :city %>

  <%= f.label :state, 'State' %>
  <%= f.text_field :state %>

  <%= f.label :zip_code, 'Zipcode' %>
  <%= f.number_field :zip_code %>

  <%= f.label :applicant_story, 'Your reason for adopting' %>
  <%= f.text_field :applicant_story %>

  <%= f.hidden_field :application_status, :value => 'In Progress' %>

  <%= f.submit %>
<% end %>
